<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mTvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/mEtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mTvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/mBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mEtUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="登录"/>
    <Button
        android:id="@+id/mBtnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mBtnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="发送"/>
    <Button
        android:id="@+id/mBtnAudioCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mBtnVideoCall"
        android:layout_marginTop="10dp"
        android:text="语音通话"/>
    <Button
        android:id="@+id/mBtnVideoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSend"
        app:layout_constraintStart_toEndOf="@+id/mBtnAudioCall"
        app:layout_constraintEnd_toStartOf="@+id/mBtnCancelCall"
        android:layout_marginTop="10dp"
        android:text="视频通话"/>
    <Button
        android:id="@+id/mBtnCancelCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mBtnSend"
        app:layout_constraintStart_toEndOf="@+id/mBtnVideoCall"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ff0000"
        android:text="取消"/>
    <Button
        android:id="@+id/mBtnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mBtnAudioCall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mBtnSwitchAudio"
        android:layout_marginTop="10dp"
        android:text="接听"/>
    <Button
        android:id="@+id/mBtnSwitchAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mBtnAccept"
        app:layout_constraintStart_toEndOf="@+id/mBtnAccept"
        app:layout_constraintEnd_toStartOf="@+id/mBtnReject"
        android:backgroundTint="#00f00f"
        android:text="切换语音通话"
        android:visibility="gone"
        tools:visibility="visible"/>
    <Button
        android:id="@+id/mBtnReject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/mBtnAccept"
        app:layout_constraintStart_toEndOf="@+id/mBtnSwitchAudio"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#ff0000"
        android:text="拒绝"/>

</androidx.constraintlayout.widget.ConstraintLayout>